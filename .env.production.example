# =========================
# Production Environment
# =========================
NODE_ENV=production
PORT=5000

# =========================
# Railway Database (Auto-configured)
# =========================
DATABASE_URL=${{Postgres.DATABASE_URL}}

# =========================
# AI API Keys (Production)
# =========================
OPENAI_API_KEY=your_production_openai_api_key_here
GEMINI_API_KEY=your_production_gemini_api_key_here

# =========================
# Kling AI API Keys (Production)
# =========================
KLING_ACCESS_KEY=your_production_kling_access_key_here
KLING_SECRET_KEY=your_production_kling_secret_key_here

# =========================
# hCaptcha Keys (Production)
# =========================
HUGGINGFACE_API_KEY=your_production_huggingface_api_key_here

# =========================
# Session & Auth (Production - MUST BE SECURE)
# =========================
SESSION_SECRET=CHANGE-THIS-TO-SECURE-RANDOM-STRING-IN-PRODUCTION
JWT_SECRET=CHANGE-THIS-TO-SECURE-JWT-SECRET-IN-PRODUCTION
JWT_REFRESH_SECRET=CHANGE-THIS-TO-SECURE-REFRESH-SECRET-IN-PRODUCTION

# =========================
# Production Settings
# =========================
SKIP_RATE_LIMIT=0
PERF_MODE=0

# =========================
# Security Settings
# =========================
HTTPS_ONLY=true
SECURE_COOKIES=true