# =========================
# Production Environment
# =========================
NODE_ENV=production
PORT=5000

# =========================
# Database Configuration
# =========================
# Railway will provide DATABASE_URL automatically
# DATABASE_URL will be set by Railway PostgreSQL service
DB_NAME=creators_prod_db
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=

# =========================
# AI API Keys (Set in Railway Environment Variables)
# =========================
OPENAI_API_KEY=
GEMINI_API_KEY=

# =========================
# Kling AI API Keys (Set in Railway Environment Variables)
# =========================
KLING_ACCESS_KEY=
KLING_SECRET_KEY=

# =========================
# HuggingFace API Key (Set in Railway Environment Variables)
# =========================
HUGGINGFACE_API_KEY=

# =========================
# Session & Auth Secrets (Set in Railway Environment Variables)
# =========================
SESSION_SECRET=
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# =========================
# Production Settings
# =========================
SKIP_RATE_LIMIT=0
PERF_MODE=0

# =========================
# Security Settings
# =========================
CORS_ORIGIN=https://your-domain.railway.app
SECURE_COOKIES=true
TRUST_PROXY=true

# =========================
# Logging
# =========================
LOG_LEVEL=info
LOG_FORMAT=json